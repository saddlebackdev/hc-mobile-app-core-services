{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noStrictGenericChecks": false,
    "resolveJsonModule": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "incremental": true,
    "noEmit": true,
    "isolatedModules": false,
    "strict": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": "src",
    "outDir": "dist",
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    "packages/*/lib", 
    "packages/flipper-plugin-react-navigation",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "**/__tests__/*"
  ]
}